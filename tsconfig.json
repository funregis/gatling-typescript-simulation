{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "target",
    "lib": ["es2021", "dom"],
    "target": "es2021",
    "module": "es2020",
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "token.json"],
  "exclude": ["**/*.test.ts"]
}
